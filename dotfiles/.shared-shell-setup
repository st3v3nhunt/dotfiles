# Setup pyenv, rbenv
# eval "$(pyenv init -)"
# eval "$(rbenv init -)"

# set vim aliases based on what is available
if [[ -x "$(command -v vim.gtk)" ]]; then alias vim='vim.gtk'; fi
if [[ -x "$(command -v vim.gtk3)" ]]; then alias vim='vim.gtk3'; fi

PATH=$PATH:$(go env GOPATH)/bin
export PATH
# Set GOPATH
GOPATH=$(go env GOPATH)
export GOPATH

# Load nvm on demand to increase shell start-up (https://github.com/lukechilds/zsh-nvm#lazy-loading)
export NVM_LAZY_LOAD=true
# Source zsh-nvm
source ~/.zsh-nvm/zsh-nvm.plugin.zsh

# Add Deno to PATH
if [[ "$OSTYPE" != "darwin*" ]]; then
  export DENO_INSTALL="/home/shunt/.deno"
  export PATH="$DENO_INSTALL/bin:$PATH"
fi
